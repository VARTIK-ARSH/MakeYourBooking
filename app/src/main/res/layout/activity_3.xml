<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Activity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrowback1"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="left"
            android:layout_marginLeft="10sp"
            android:src="@drawable/baseline_arrow_back_24"
            >

        </ImageView>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:src="@drawable/pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="left"
            android:layout_marginLeft="35sp"
            android:text="Payment"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="280sp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/reference"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Reference"
                    android:paddingLeft="15sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <EditText
                    android:id="@+id/transaction_date"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Transaction Date"
                    android:paddingLeft="15sp"
                    android:inputType="date"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <EditText
                    android:id="@+id/voucher_date"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Voucher Date"
                    android:paddingLeft="15sp"
                    android:inputType="date"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <Spinner
                    android:id="@+id/payment_mode"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/spinnerbackground"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:popupBackground="@color/white" />

                <EditText
                    android:id="@+id/currency"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Currency"
                    android:paddingLeft="15sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Amount"
                    android:paddingLeft="15sp"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <EditText
                    android:id="@+id/bank_account"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Bank Account"
                    android:paddingLeft="15sp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <EditText
                    android:id="@+id/narration"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:background="@drawable/edittextbackground"
                    android:hint="Narration"
                    android:paddingLeft="15sp"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_gravity="center"
                    android:text="Attach paymeny document"
                    android:textColor="@color/black"
                    android:textSize="20sp">

                </TextView>


                <Button
                    android:id="@+id/choose_file"
                    android:layout_width="300sp"
                    android:layout_height="40sp"
                    android:text="Choose File"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FAF7F7" />

            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:text="Save"
                android:layout_margin="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="50sp"
                android:textColor="#FAF7F7"
                android:background="@drawable/btnbackground"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbarlogin"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
